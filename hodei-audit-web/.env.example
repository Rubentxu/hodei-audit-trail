# gRPC Web Client Environment Configuration

# Base Configuration
NEXT_PUBLIC_GRPC_BASE_URL=http://localhost:8080
NEXT_PUBLIC_GRPC_HOST=http://localhost:8080

# Service-specific Hosts
NEXT_PUBLIC_GRPC_HOST_EVENTS=http://localhost:8081
NEXT_PUBLIC_GRPC_HOST_ANALYTICS=http://localhost:8082
NEXT_PUBLIC_GRPC_HOST_COMPLIANCE=http://localhost:8083
NEXT_PUBLIC_GRPC_HOST_AUTH=http://localhost:8080

# Timeout Configuration (milliseconds)
NEXT_PUBLIC_GRPC_TIMEOUT_DEFAULT=10000
NEXT_PUBLIC_GRPC_TIMEOUT_EVENTS=30000
NEXT_PUBLIC_GRPC_TIMEOUT_ANALYTICS=60000
NEXT_PUBLIC_GRPC_TIMEOUT_COMPLIANCE=90000
NEXT_PUBLIC_GRPC_TIMEOUT_AUTH=10000

# Retry Configuration
NEXT_PUBLIC_GRPC_RETRY_ATTEMPTS=3
NEXT_PUBLIC_GRPC_RETRY_DELAY=1000

# Rate Limiting (requests per minute)
NEXT_PUBLIC_GRPC_RATE_LIMIT_DEFAULT=100
NEXT_PUBLIC_GRPC_RATE_LIMIT_EVENTS=60
NEXT_PUBLIC_GRPC_RATE_LIMIT_ANALYTICS=30
NEXT_PUBLIC_GRPC_RATE_LIMIT_COMPLIANCE=20
NEXT_PUBLIC_GRPC_RATE_LIMIT_AUTH=10

# Caching Configuration
NEXT_PUBLIC_GRPC_CACHE_TTL=300
NEXT_PUBLIC_GRPC_CACHE_MAX_SIZE=1000

# Compression
NEXT_PUBLIC_GRPC_COMPRESSION_ENABLED=true
NEXT_PUBLIC_GRPC_COMPRESSION_THRESHOLD=1024
